<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFB8B8"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:text="@string/title_profileU"
            android:textColor="#090606"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:paddingLeft="15dp"
            android:text="@string/profile_name" />

        <TextView
            android:id="@+id/profile_unit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:paddingLeft="15dp"
            android:text="@string/unit_no" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_family"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                android:text="@string/profile_family" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#0E8EE3"
                android:text="@string/view_family" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_paidBills"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.7"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                android:text="@string/profile_paidBills" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#0E8EE3"
                android:text="@string/view_paidBills" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#0E8EE3"
            android:text="@string/editProfile" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:text="@string/title_unit_info"
            android:textColor="#070404"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/unit_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:paddingLeft="15dp"
            android:text="@string/unit_no" />

        <TextView
            android:id="@+id/unit_bedrooms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:paddingLeft="15dp"
            android:text="@string/unit_bedrooms" />

        <TextView
            android:id="@+id/unit_bathrooms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:paddingLeft="15dp"
            android:text="@string/unit_bathrooms" />

        <TextView
            android:id="@+id/unit_parking"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:paddingLeft="15dp"
            android:text="@string/unit_parking" />


    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->


</ScrollView>